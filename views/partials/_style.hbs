:root {
  --primary: rgb(24, 139, 134);
  --light-primary: lightseagreen;
  --secondary: lightgreen;
  --box-shadow: #00bbbb33;
  --border-color: #ddd;
}
td button {
  width: max-content !important;
}
.iconify, .iconify *{
  color: white;
	transition: color .3s ease;
}
button:hover .iconify, button:hover .iconify * {
  color: #333;
}
* {
  font-family: "Montserrat", sans-serif;
  color: #333;
}
table th {
	cursor: pointer;
	user-select: none;
}
table, table td, table th {
  border-collapse: collapse;
  text-align: left;
  border: 1px solid var(--border-color);
}
table td, table th {
  padding: 10px;
}
textarea {
	height: 50vh;
}
tbody tr:nth-child(even) {
  background-color: #0001;
}
.container a {
  color: var(--primary);
  padding: 3px;
  border-radius: 3px;
  background-position: -0% 0;
  background-size: 200%;
  background-image: linear-gradient(to right, transparent 50%, var(--light-primary) 50%, var(--secondary) 100%);
  transition: background-position 0.3s ease;
}
.container a:hover {
  color: white;
  background-position: -100% 0;
}
html {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}
body {
  height: 60vh;
  max-width: 600px;
  width: 80vw;
  padding: 10px;
}
hr {
  display: block;
  height: 2px;
  border: none;
}
body textarea, body input[type*=text], body button, input[type*=button], input[type*=submit] {
  padding: 15px;
  border-radius: 5px;
  margin-top: 5px;
  border: 1px solid var(--light-primary);
  transition: box-shadow .3s ease;
}
form button {
	width: 100%;
}
body textarea:focus, body input[type*=text]:focus {
  box-shadow: 0 0 0 5px var(--box-shadow);
  outline: none;
}
body button, input[type*=button], input[type*=submit] {
  padding: 8px 15px;
  background: var(--primary);
  color: white;
  transition: background-color .3s ease, color .3s ease, transform .1s ease;
}
body button:hover, input[type*=button]:hover, input[type*=submit]:hover {
  background: transparent;
  color: #333;
}
body button:active, input[type*=button]:active, input[type*=submit]:active {
  transform: scale(.98)
}
.danger-btn {
	background: #ff4444;
	border-color: #c22;
}
hr {
  background: linear-gradient(to right, transparent, var(--primary), transparent)
}
.container h1, .container h2, .container h3 {
  text-align: center;
}
table {
  width: 100%;
}
.iconify {
	color: white;
}
textarea {
	min-height: 300px;
}
textarea, input[type*=text]{
  width: 100%;
}
textarea, input[type*=text]{
  width: 100%;
}
